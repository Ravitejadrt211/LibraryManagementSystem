@{
    ViewData["Title"] = "Library Dashboard";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">📊 Library Management Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-primary shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Total Books</h5>
                    <h2>@ViewBag.TotalBooks</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-success shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Total Borrowers</h5>
                    <h2>@ViewBag.TotalBorrowers</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-info shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-info">Total Borrow Records</h5>
                    <h2>@ViewBag.TotalRecords</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-warning shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning">Active Borrowed Books</h5>
                    <h2>@ViewBag.ActiveBorrows</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-danger shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-danger">Overdue Books</h5>
                    <h2>@ViewBag.OverdueBooks</h2>
                </div>
            </div>
        </div>
    </div>
</div>
