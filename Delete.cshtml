@model LibraryManagementSystem.Models.BookDto

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <h2 class="text-danger">Are you sure you want to delete this book?</h2>

    <div class="card mt-4">
        <div class="card-body">
            <h4>@Model.Title</h4>
            <p><strong>Author:</strong> @Model.Author</p>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>Genre:</strong> @Model.Genre</p>
            <p><strong>Quantity:</strong> @Model.Quantity</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-danger mt-3">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
