@model IEnumerable<LibraryManagementSystem.Models.BookDto>

@{
    ViewData["Title"] = "Book List";
}

<div class="container mt-4">
    <h2 class="text-primary">📚 Book List</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Add New Book</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Genre</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.ISBN</td>
                        <td>@book.Genre</td>
                        <td>@book.Quantity</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No books found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
