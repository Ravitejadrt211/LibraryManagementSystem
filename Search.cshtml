@model IEnumerable<LibraryManagementSystem.Models.BookDto>
@{
    ViewData["Title"] = "Search Results";
    var keyword = ViewBag.Keyword as string;
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">🔍 Search Results</h3>
            <a asp-action="Index" class="btn btn-light btn-sm">⬅ Back to List</a>
        </div>

        <div class="card-body">
            <form asp-action="Search" method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="keyword" value="@keyword" class="form-control" placeholder="Search by title, author or genre..." />
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </form>

            @if (!Model.Any())
            {
                <div class="alert alert-warning text-center mt-3">
                    No books found matching your search <strong>@keyword</strong>.
                </div>
            }
            else
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Genre</th>
                            <th>ISBN</th>
                            <th>Quantity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td>@item.Genre</td>
                                <td>@item.ISBN</td>
                                <td>
                                    @if (item.Quantity > 0)
                                    {
                                        <span class="badge bg-success">@item.Quantity Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm">View</a>
                                    <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
