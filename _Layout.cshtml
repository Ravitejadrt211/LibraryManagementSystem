<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Custom navbar colors */
        .navbar-custom {
            background: linear-gradient(90deg, #4b6cb7, #182848); /* gradient background */
        }
        .navbar-custom .nav-link {
            color: #fff;
            font-weight: 500;
            margin-right: 15px;
            transition: 0.3s;
        }
        .navbar-custom .nav-link:hover {
            color: #ffdd57; /* highlight color on hover */
            text-decoration: underline;
        }
        .navbar-custom .navbar-brand {
            font-weight: 700;
            color: #ffdd57;
        }
        .btn-custom {
            background-color: #ff6b6b;
            color: #fff;
            border-radius: 50px;
            font-weight: 600;
            transition: 0.3s;
        }
        .btn-custom:hover {
            background-color: #ff4757;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">Library System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="color: #ffdd57;"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="Index">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Borrower" asp-action="Index">Borrowers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="BorrowRecord" asp-action="Index">Borrow Records</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-custom ms-3" asp-controller="BorrowRecord" asp-action="Create">Borrow New Book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 mb-3">
        <p>&copy; @DateTime.Now.Year - Library Management System</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
